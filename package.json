{
  "name": "cctv-monitor-api",
  "version": "1.0.0",
  "description": "CCTV Monitor API Backend - Node.js TypeScript API server for managing CCTV cameras, recordings, and alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:init": "ts-node src/scripts/init-database.ts",
    "db:seed": "ts-node src/scripts/seed-database.ts",
    "db:reset": "ts-node src/scripts/reset-database.ts"
  },
  "keywords": [
    "cctv",
    "api",
    "nodejs",
    "typescript",
    "express",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "node-onvif": "^0.1.7",
    "onvif": "^0.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
